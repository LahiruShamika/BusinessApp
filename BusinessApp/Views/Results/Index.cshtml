@{
    ViewData["Title"] = "Payment Validation Results";
}

<h1>Payment Validation Results</h1>

<div>
    <h2>Valid Payments</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Narration</th>
                <th>Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var payment in Model.ValidPayments)
            {
                <tr>
                    <td>@payment.Date.ToShortDateString()</td>
                    <td>@payment.Narration</td>
                    <td>@payment.Amount.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <h2>Invalid Payments</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Narration</th>
                <th>Error Message</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var invalidPayment in Model.InvalidPayments)
            {
                <tr>
                    <td>@invalidPayment.Date.ToShortDateString()</td>
                    <td>@invalidPayment.Narration</td>
                    <td>@invalidPayment.ErrorMessage</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<a asp-controller="Upload" asp-action="Index" class="btn btn-primary">Upload New File</a>