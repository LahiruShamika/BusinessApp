@{
    ViewData["Title"] = "Payment Comparison Results";
}

<h2>Payment Comparison Results</h2>

@if (Model != null && Model.ComparisonResults != null && Model.ComparisonResults.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Payment Record</th>
                <th>OCR Result</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in Model.ComparisonResults)
            {
                <tr>
                    <td>@result.PaymentRecord.Amount</td>
                    <td>@result.OcrResult.Amount</td>
                    <td>@result.IsMatch ? "Match" : "Mismatch"</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No comparison results available.</p>
}

<a href="@Url.Action("Index", "Upload")" class="btn btn-primary">Upload New Files</a>